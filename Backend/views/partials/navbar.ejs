<header class="bg-red-500 text-white shadow-md sticky top-0 z-10 w-full">
  <div class="max-w-7xl w-full mx-auto px-4">
    <div class="flex justify-between items-center py-2">
      <!-- Logo -->
      <div class="text-xl font-bold">CSIT Mock Test</div>

      <!-- Mobile toggle button -->
      <button id="mobile-menu-button" class="md:hidden focus:outline-none">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex items-center space-x-6 ml-auto">
        <a href="/" class="<%= currentPage === 'home' ? 'bg-red-600 font-medium' : 'hover:bg-red-400' %> px-4 py-2 rounded-lg transition">Home</a>

        <% if (isLoggedIn && user && user.role) { %>
          <% if (user.role.toLowerCase() === 'student') { %>
            <a href="/dashboard" class="<%= currentPage === 'dashboard' ? 'bg-red-600 font-medium' : 'hover:bg-red-400' %> px-4 py-2 rounded-lg transition">Dashboard</a>
            <a href="/test/start" class="<%= currentPage === 'test' ? 'bg-red-600 font-medium' : 'hover:bg-red-400' %> px-4 py-2 rounded-lg transition">Test</a>
          <% } else if (user.role.toLowerCase() === 'admin') { %>
            <a href="/questions/manage" class="<%= currentPage === 'manage' ? 'bg-red-600 font-medium' : 'hover:bg-red-400' %> px-4 py-2 rounded-lg transition">Manage Questions</a>
          <% } %>
        <% } %>

        <% if (!isLoggedIn) { %>
          <a href="/signup" class="<%= currentPage === 'signup' ? 'bg-red-600 font-medium' : 'hover:bg-red-400' %> px-4 py-2 rounded-lg border border-white transition">SignUp</a>
          <a href="/login" class="<%= currentPage === 'login' ? 'bg-white text-red-500 font-medium' : 'bg-white text-red-500 hover:bg-red-100' %> px-4 py-2 rounded-lg transition">Login</a>
        <% } else { %>
          <form action="/logout" method="POST">
            <button type="submit" class="hover:bg-red-400 px-4 py-2 rounded-lg border border-white transition">Logout</button>
          </form>
        <% } %>
      </nav>
    </div>

    <!-- Mobile Menu -->
    <nav id="mobile-menu" class="hidden md:hidden flex-col gap-2 mt-4">
      <a href="/" class="block px-4 py-2 hover:bg-red-400 rounded-lg">Home</a>

      <% if (isLoggedIn && user && user.role) { %>
        <% if (user.role.toLowerCase() === 'student') { %>
          <a href="/dashboard" class="block px-4 py-2 hover:bg-red-400 rounded-lg">Dashboard</a>
          <a href="/test" class="block px-4 py-2 hover:bg-red-400 rounded-lg">Test</a>
        <% } else if (user.role.toLowerCase() === 'admin') { %>
          <a href="/questions/manage" class="block px-4 py-2 hover:bg-red-400 rounded-lg">Manage Questions</a>
        <% } %>
      <% } %>

      <% if (!isLoggedIn) { %>
        <a href="/signup" class="block px-4 py-2 hover:bg-red-400 rounded-lg">SignUp</a>
        <a href="/login" class="block px-4 py-2 hover:bg-red-400 rounded-lg">Login</a>
      <% } else { %>
        <form action="/logout" method="POST">
          <button type="submit" class="w-full text-left px-4 py-2 hover:bg-red-400 rounded-lg">Logout</button>
        </form>
      <% } %>
    </nav>
  </div>
</header>

<script>
  // Toggle mobile menu
  document.getElementById("mobile-menu-button")?.addEventListener("click", () => {
    const menu = document.getElementById("mobile-menu");
    menu.classList.toggle("hidden");
  });
</script>
